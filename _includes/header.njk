<header class="sticky top-0 z-50 bg-white shadow-sm">
    <div class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
            {# Logo #}
            <div class="flex items-center">
                <a href="{{ '/' | url }}" class="text-2xl font-bold text-indigo-600 flex items-center">
                    {# Replace Font Awesome icon with your image #}
                    <img src="{{ '/images/logo.svg' | url }}" alt="{{ global.title }} Logo" class="mr-2" style="height: 1.5em; width: auto;" /> {{ global.title }}
                </a>
            </div>
            {# Desktop Navigation #}
            <nav class="hidden md:flex space-x-8">
                {% for item in nav.items %}                    
                    <a href="{{ item.url | url }}" class="nav-link font-medium text-gray-700 hover:text-indigo-600">
                        {{ item.name }}
                    </a>
                {% endfor %}
            </nav>
            {# Mobile menu button #}
            <button id="mobile-menu-button" class="md:hidden cursor-pointer text-gray-700 focus:outline-none">
                <i class="fas fa-bars text-xl"></i>
            </button>
        </div>
        {# Mobile Navigation #}
        <div id="mobile-menu" class="mobile-menu md:hidden">
            <div class="pt-2 pb-4 space-y-1">
                {% for item in nav.items %}
                    <a href="{{ item.url | url }}" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-gray-50">
                        {{ item.name }}
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
</header>
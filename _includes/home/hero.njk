{# Hero Section #}
<section class="gradient-bg text-white py-16">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center">
            <div class="md:w-1/2 mb-8 md:mb-0">
                <h1 class="text-4xl md:text-5xl font-bold mb-4">
                    {{ hero.heading }}
                </h1>
                <p class="text-xl mb-6">
                    {{ hero.description }}
                </p>
                <div class="flex flex-wrap gap-3">
                    <a href="{{ hero.cta1.url }}" class="bg-white text-indigo-600 hover:bg-gray-100 px-6 py-3 rounded-lg font-medium">
                        {{ hero.cta1.text }}
                    </a>
                    <a href="{{ hero.cta2.url }}" class="bg-indigo-700 hover:bg-indigo-800 text-white px-6 py-3 rounded-lg font-medium">
                        {{ hero.cta2.text }}
                    </a>
                </div>
            </div>
            <div class="md:w-1/2">
                <img src="images/mascot-hero-home.png" alt="AI Tech Insights Mascot" class="rounded-lg w-full h-auto max-h-80 object-contain">
            </div>
        </div>
    </div>
</section>
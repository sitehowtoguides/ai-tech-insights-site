<section class="py-12 bg-white">
    <div class="container mx-auto px-4">

        <div class="flex justify-between items-center mb-8">
            <h2 class="text-3xl font-bold">
                {{ popular_section.heading }}
            </h2>
            <a href="{{ popular_section.cta.url | url }}" class="text-indigo-600 font-medium hover:underline">
                {{ popular_section.cta.text }} <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {% for item in collections.all | where('popular', true) %}
                {% include "partials/teaser-tutorial.njk" %}
            {% endfor %}
        </div>

    </div>
</section>
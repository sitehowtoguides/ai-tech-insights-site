<section id="featured-posts" class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-3xl font-bold">
                {{ featured_section.heading }}
            </h2>
            <a href="{{ featured_section.cta.url | url }}" class="text-indigo-600 font-medium hover:underline">
                {{ featured_section.cta.text }} <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for item in collections.all %}
                {% if item.data.featured == true %}
                    {% include "partials/teaser-article.njk" %}
                {% endif %}             
            {% endfor %}
        </div>
    </div>
</section>
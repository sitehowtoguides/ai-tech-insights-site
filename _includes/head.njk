<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% if meta.title | length > 0 %}
        {% set site_title = meta.title %}
    {% elif title | length > 0 %}
        {% set site_title = title %}        
    {% else %}
        {% set site_title = global.meta.title %}
    {% endif %}

    {% if meta.description | length > 0 %}
        {% set site_description = meta.description %}
    {% else %}
        {% set site_description = global.meta.description %}
    {% endif %}

    <title>{{ site_title }}</title>
    <meta name="description" content="{{ site_description }}">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="{{ '/assets/css/styles.css' | url }}">

    {% if layout == 'article' %}
        {% include "styles/article.njk" %}
    {% endif %}

    {% if faq.items | length > 0 %}
        {% include "partials/faq-schema.njk" %}
    {% endif %}

</head>
{% extends "base.njk" %}

{% block content %}
<div class="container mx-auto px-4 py-8">
  <article class="max-w-4xl mx-auto">
    <header class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">{{ title }}</h1>
      {# Check if date exists before trying to display it #}
      {% if date %}
        <time datetime="{{ date | htmlDateString }}" class="text-gray-500 text-sm">
          {{ date | readableDate }}
        </time>
      {% endif %}
    </header>
    <div class="prose lg:prose-xl max-w-none">
      {{ content | safe }}
    </div>
  </article>
</div>
{% endblock %}


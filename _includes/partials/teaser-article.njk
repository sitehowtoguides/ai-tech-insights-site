<article class="article-card bg-white rounded-lg overflow-hidden shadow-md transition-all duration-300">
    <a href="{{ item.url }}">
        <img src="{{ item.data.teaser_image | url }}" alt="" class="w-full h-48 object-contain p-4 bg-gray-100">
        <div class="p-6">
            <span class="inline-block px-3 py-1 bg-purple-100 text-purple-600 rounded-full text-xs font-semibold mb-2">
                {{ item.data.tag_name }}
            </span>
            <h3 class="text-xl font-bold mb-3">
                {{ item.data.title }}
            </h3>
            <p class="text-gray-600 mb-4">
                {{ item.data.summary }}
            </p>
            <div class="flex items-center text-sm text-gray-500">
                {% set the_content = item.content %}
                {% include "helpers/reading-time.njk" %}
            </div>
        </div>
    </a>
</article>
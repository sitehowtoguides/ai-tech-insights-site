---
layout: default
---
<main class="container mx-auto px-4 pt-6 pb-12">
    <article class="prose lg:prose-xl">

        <h1 style="margin-top: 0;">
            {{ title }}
        </h1>

        {% if subtitle | length > 0 %}            
            <p class="text-lg text-gray-600">
                {{ subtitle }}
            </p>
        {% endif %}

        {{ content | safe }}

    </article>
</main>